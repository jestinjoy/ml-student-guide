cat > .gitignore <<'EOF'
# Python virtual environments
venv/
env/
ENV/

# Bytecode / cache
__pycache__/
*.pyc
*.pyo

# Editors / OS
.vscode/
.idea/
.DS_Store

# Build outputs: ignore everything in _build except the compiled html we want to publish
_build/*
!_build/html/
!_build/html/**

# Distribution / packaging
dist/
*.egg-info/

# Jupyter
.ipynb_checkpoints/
EOF
